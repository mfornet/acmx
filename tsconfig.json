{
    "compilerOptions": {
        "skipLibCheck": true,
        /*mocha and jedi have same declarations*/
        "baseUrl": ".",
        "paths": {
            "*": [
                "types/*"
            ]
        },
        "module": "commonjs",
        "target": "es2017",
        "outDir": "dist",
        "lib": ["es2017", "DOM"],
        "jsx": "react",
        "sourceMap": true,
        "rootDir": "src",
        /* Strict Type-Checking Option */
        "strict": true,
        /* enable all strict type-checking options */
        /* Additional Checks */
        "noUnusedLocals": true,
        /* Report errors on unused locals. */
        "noUnusedParameters": true,
        /* Report errors on unused parameters. */
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
